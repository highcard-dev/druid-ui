{
  "name": "druid-ui-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo build --filter='./packages/*'",
    "gen:types": "jco guest-types -o generated/types/guest/import wit --world-name druid-ui",
    "release": "multi-semantic-release",
    "dev:simple": "turbo dev --filter=simple",
    "dev:simple-no-sandbox": "turbo dev --filter=simple-no-sandbox",
    "dev:simple-extended": "turbo dev --filter=simple-extended",
    "dev:simple-extended-no-sandbox": "turbo dev --filter=simple-extended-no-sandbox",
    "dev:druid-plattform": "turbo dev --filter=druid-plattform",
    "dev:druid-plattform-no-sandbox": "turbo dev --filter=druid-plattform-no-sandbox"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.16.4",
    "@parcel/transformer-typescript-types": "^2.16.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.7",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@tsconfig/node20": "^20.1.6",
    "@tsconfig/strictest": "^2.0.5",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "multi-semantic-release": "^3.0.0",
    "semantic-release": "^24.0.0",
    "turbo": "^2.5.3",
    "typescript": "~5.8.3"
  }
}
