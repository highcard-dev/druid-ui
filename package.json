{
  "name": "druid-ui",
  "private": false,
  "version": "1.7.2-next.2",
  "type": "module",
  "main": "./dist/druid-ui.lib.umd.js",
  "module": "./dist/druid-ui.lib.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "druid-ui-build": "bin/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/druid-ui.lib.js",
      "require": "./dist/druid-ui.lib.umd.js"
    },
    "./build": {
      "import": "./bin/build.js",
      "require": "./bin/build.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && npm run build:lib && npm run build:types",
    "build:lib": "vite build --mode production",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "preview": "vite preview",
    "test": "echo 'No tests specified' && exit 0",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "gen:types": "jco guest-types -o generated/types/guest/import wit --world-name druid-ui",
    "build:example:simple": "druid-ui-build examples/simple/src/component/adder.tsx examples/simple/dist"
  },
  "dependencies": {
    "@bytecodealliance/componentize-js": "^0.19.3",
    "@bytecodealliance/jco": "^1.15.1",
    "esbuild": "^0.25.11",
    "hyperid": "^3.3.0",
    "jsdom": "^26.1.0",
    "snabbdom": "^3.6.2"
  },
  "devDependencies": {
    "@vitest/ui": "^3.2.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.7",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "typescript": "~5.8.3",
    "semantic-release": "^24.0.0",
    "@types/react": "^19.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@tsconfig/node20": "^20.1.6",
    "@tsconfig/strictest": "^2.0.5"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
