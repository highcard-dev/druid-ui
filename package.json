{
  "name": "druid-ui",
  "private": false,
  "version": "1.5.3",
  "type": "module",
  "main": "./dist/druid-ui.lib.umd.js",
  "module": "./dist/druid-ui.lib.esm.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/druid-ui.lib.esm.js",
      "require": "./dist/druid-ui.lib.umd.js"
    },
    "./standalone": {
      "import": "./dist/druid-ui.standalone.esm.js",
      "require": "./dist/druid-ui.standalone.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && npm run build:lib && npm run build:standalone && npm run build:types",
    "build:lib": "vite build --mode production",
    "build:standalone": "vite build --mode standalone",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.7",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@tsconfig/node20": "^20.1.6",
    "@tsconfig/strictest": "^2.0.5",
    "@types/react": "^19.1.11",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "semantic-release": "^24.0.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "morphdom": "^2.7.7",
    "wasmoon": "^1.16.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
