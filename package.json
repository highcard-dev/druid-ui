{
  "name": "druid-ui-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo build --filter='./packages/*'",
    "gen:types": "jco guest-types -o generated/types/guest/import wit --world-name druid-ui",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "dev:simple": "turbo dev --filter=simple",
    "dev:simple-no-sandbox": "turbo dev --filter=simple-no-sandbox",
    "dev:simple-extended": "turbo dev --filter=simple-extended",
    "dev:simple-extended-no-sandbox": "turbo dev --filter=simple-extended-no-sandbox",
    "dev:druid-plattform": "turbo dev --filter=druid-plattform",
    "dev:druid-plattform-no-sandbox": "turbo dev --filter=druid-plattform-no-sandbox",
    "watch": "turbo watch build --filter='./packages/*'"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@parcel/packager-ts": "^2.16.4",
    "@parcel/transformer-typescript-types": "^2.16.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@tsconfig/node20": "^20.1.6",
    "@tsconfig/strictest": "^2.0.5",
    "@vitest/ui": "^3.2.4",
    "turbo": "^2.5.3",
    "typescript": "~5.8.3"
  }
}
